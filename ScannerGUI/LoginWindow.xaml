<Window x:Class="ScannerGUI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Width="300" Height="255" ResizeMode="NoResize">
    <StackPanel Margin="10">
        <Label ToolTip="">E-Mail:</Label>
        <TextBox Name="emailBox" MinHeight="26" VerticalContentAlignment="Center" Padding="5,0" ToolTip="Enter your Everybody Edits account Email." />

        <Label>Password:</Label>
        <PasswordBox Name="passwordBox" MinHeight="26" VerticalContentAlignment="Center" Padding="5,0" ToolTip="Enter your Everybody Edits account password." />

        <Label>World ID:</Label>
        <TextBox Name="worldIdBox" MinHeight="26" VerticalContentAlignment="Center" Padding="5,0" Margin="0,0,0,10" ToolTip="Enter the World ID of your Database World." />

        <Button Name="loginButton" MinHeight="26" Click="OnLogin" ToolTip="Login into Everybody Edits.">Login</Button>
    </StackPanel>
</Window>
